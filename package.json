    "eslint": "^8.57.0",
    "eslint-plugin-jsdoc": "^48.2.2",
    "expect": "^29.7.0",
    "jest": "^29.7.0",
    "npm-check": "^6.0.1",
    "prettier": "^3.2.5",
    "terser-webpack-plugin": "^5.3.10",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typedoc": "^0.25.12",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
